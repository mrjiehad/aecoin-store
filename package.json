{
  "name": "aecoin-store",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "dev:sandbox": "npx wrangler pages dev dist --d1=aecoin-db --local --ip 0.0.0.0 --port 3000",
    "build": "npx vite build",
    "preview": "npx wrangler pages dev dist",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name aecoin-store",
    "db:migrate:local": "npx wrangler d1 migrations apply aecoin-db --local",
    "db:migrate:prod": "npx wrangler d1 migrations apply aecoin-db",
    "db:seed": "npx wrangler d1 execute aecoin-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "npx wrangler d1 execute aecoin-db --local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "cf-typegen": "npx wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "@libsql/client": "^0.15.15",
    "hono": "^4.9.8",
    "jose": "^5.1.3",
    "mysql2": "^3.15.0",
    "nanoid": "^5.0.4",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
